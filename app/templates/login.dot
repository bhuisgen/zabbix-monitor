<section id="login" class="container">
  <form id="formLogin" class="form-login text-center" novalidate>
    <div class="form-group">
      <input type="text" class="form-control" id="zabbixServer" placeholder="Server" required>
      <div class="invalid-feedback">
        Please provide the zabbix server
      </div>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" id="zabbixUsername" placeholder="Username" required>
      <div class="invalid-feedback">
        Please provide your username
      </div>
      <input type="password" class="form-control" id="zabbixPassword" placeholder="Password" required>
      <div class="invalid-feedback">
        Please provide your password
      </div>
    </div>
    <div class="form-group">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="rememberMe">
        <label class="form-check-label" for="rememberMe">Remember me</label>
      </div>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Login</button>
  </form>
</section>

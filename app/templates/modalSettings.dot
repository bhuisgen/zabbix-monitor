<div class="modal fade" id="modalSettings" tabindex="-1" role="dialog" aria-labelledby="labelSettings">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
          <h5 class="modal-title" id="labelSettings">Settings</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
      </div>
      <div class="modal-body">
        <form id="formSettings" novalidate>
          <div class="form-group row">
            <label for="serverURL" class="col-sm-2 col-form-label">Server</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="serverURL" placeholder="URL" value={{= it.config.server.url || ''}} required>
              <div class="invalid-feedback">
                Please provide the zabbix API server URL
              </div>
            </div>
          </div>
          <div class="form-group row">
            <label for="serverUser" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="serverUser" placeholder="Username" value={{= it.config.server.user || '' }} required>
              <div class="invalid-feedback">
                Please provide the zabbix API username
              </div>
            </div>
          </div>
          <div class="form-group row">
            <label for="serverPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="serverPassword" placeholder="Password" value={{= it.config.server.password || ''}} required>
              <div class="invalid-feedback">
                Please provide the zabbix API password
              </div>
            </div>
          </div>
          <div class="form-group row">
            <label for="settingsTest" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
              <button type="button" class="btn btn-secondary" id="settingsTest">Test</button>
            </div>
            <div class="col-sm-8">
              <input type="text" readonly class="form-control-plaintext" id="settingsTestMessage"></input>
            </div>
          </div>
          <div class="form-group row">
            <label for="storeConfiguration" class="col-sm-2 col-form-label">Options</label>
            <div class="col-sm-10">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="storeConfiguration">
                <label class="form-check-label" for="storeConfiguration">Store configuration in local storage</label>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary" id="settingsSave">Save</button>
      </div>
    </div>
  </div>
</div>

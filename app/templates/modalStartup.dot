<div class="modal fade" id="modalStartup" tabindex="-1" role="dialog" aria-labelledby="labelStartup">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <form id="formStartup" novalidate>
          <div class="form-group">
            <label for="serverHostname" class="col-form-label">API server</label>
            <input type="text" class="form-control" id="serverHostname" placeholder="Hostname" required>
            <div class="invalid-feedback">
              Please provide the zabbix server hostname
            </div>
          </div>
          <div class="form-group">
            <label for="serverUser" class="col-form-label">API credentials</label>
            <input type="text" class="form-control" id="serverUser" placeholder="Username" required>
            <div class="invalid-feedback">
              Please provide your zabbix username
            </div>
          </div>
          <div class="form-group">
            <label for="serverPassword" class="col-form-label sr-only"></label>
            <input type="password" class="form-control" id="serverPassword" placeholder="Password" required>
            <div class="invalid-feedback">
              Please provide your zabbix password
            </div>
          </div>
          <div class="form-group">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="rememberMe">
              <label class="form-check-label" for="rememberMe">Remember me</label>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary" id="startupConnect">Connect</button>
      </div>
    </div>
  </div>
</div>

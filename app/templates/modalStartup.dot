<div class="modal fade" id="modalStartup" tabindex="-1" role="dialog" aria-labelledby="labelStartup">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <form>
          <div class="form-group has-feedback">
            <label for="serverHostname" class="control-label">API server</label>
            <input type="text" class="form-control" id="serverHostname" placeholder="Hostname">
          </div>
          <div class="form-group has-feedback">
            <label for="serverUser" class="control-label">API username</label>
            <input type="text" class="form-control" id="serverUser" placeholder="Username">
          </div>
          <div class="form-group has-feedback">
            <label for="serverPassword" class="control-label sr-only"></label>
            <input type="password" class="form-control" id="serverPassword" placeholder="Password">
          </div>
          <div class="form-group">
            <input type="checkbox" id="rememberMe"> Remember me
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="startupConnect">Connect</button>
      </div>
    </div>
  </div>
</div>
